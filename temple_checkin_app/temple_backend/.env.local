# Flask 設定
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=True

# 密鑰設定
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too

# 資料庫設定
DATABASE_URL=sqlite:///temple_checkin.db
# 或使用 MySQL:
# DATABASE_URL=mysql://username:password@localhost/temple_checkin

# 伺服器設定
HOST=0.0.0.0
PORT=5000

# JWT 設定
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 小時 (秒)
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 天 (秒)

# CORS 設定
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 其他設定
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB